{
  "compilerOptions": {
    "baseUrl": "./src",
    "types": [
      "@types/node"
    ],
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "moduleDetection": "force",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "dist"
  ]
}
